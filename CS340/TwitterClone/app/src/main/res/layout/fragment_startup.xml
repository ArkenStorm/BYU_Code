<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.main.startup.StartupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.main.StartupActivity">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      tools:layout_editor_absoluteX="0dp"
                      android:id="@+id/linearLayout"
                      android:orientation="vertical"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="20dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      tools:layout_editor_absoluteY="-87dp">
            <ImageView android:layout_width="270dp" android:layout_height="363dp"
                       android:src="@drawable/bird"
                       android:layout_gravity="center"
                       android:layout_marginBottom="100dp"
                       android:tint="@color/colorAccentDark"/>
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/login"
                    app:strokeColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginButton"/>
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/register"
                    app:strokeColor="@color/colorPrimary"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/registerButton"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>